<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LoginHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical">

            <com.apitechnosoft.ipad.component.ASTButton
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:text="REGISTER"
                android:textColor="@color/white" />

            <com.apitechnosoft.ipad.component.ASTButton
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/folderbutton"
                android:text="LOGIN"
                android:textColor="@color/white" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_170dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/logo" />
            </LinearLayout>

            <com.apitechnosoft.ipad.component.ASTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Your Home in the Cloud!"
                android:textColor="@color/selectfolder"
                android:textSize="@dimen/_20dp"
                android:textStyle="italic" />


            <com.apitechnosoft.ipad.component.ASTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_2dp"
                android:text="Storage + Digital Organizer"
                android:textColor="@color/black"
                android:textSize="@dimen/_14dp" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <Button android:id="@+id/linkedinbt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_weight="0.5"
                    android:background="@color/linkedin"
                    android:text="Linkedin"
                    android:textColor="@color/white" />

                <Button android:id="@+id/instabt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_weight="0.5"
                    android:background="@color/insta"
                    android:text="Instagram"
                    android:textColor="@color/white" />

            </LinearLayout>

            <com.apitechnosoft.ipad.component.ASTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:gravity="center"
                android:padding="@dimen/_2dp"
                android:text="SYNC with ipadtoday.com"
                android:textColor="@color/orange"
                android:textSize="@dimen/_14dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical">

            <com.apitechnosoft.ipad.component.ASTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_2dp"
                android:text="FREE 5 GB"
                android:textColor="@color/orange"
                android:textSize="@dimen/_22dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/joinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/orange">

                <com.apitechnosoft.ipad.component.ASTTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text="JOIN FOR FREE NOW"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>